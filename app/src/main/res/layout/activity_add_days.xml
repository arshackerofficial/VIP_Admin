<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:textAlignment="center"
    tools:context=".AddDaysActivity">

    <soup.neumorphism.NeumorphImageView
        android:id="@+id/AddDayslogoimg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/logo" />

    <TextView
        android:id="@+id/AddDaystext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/AddDayslogoimg"
        android:layout_margin="20dp"
        android:fontFamily="sans-serif-thin"
        android:text="Add Days To Key!"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="@color/black"/>

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/AddDaysCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/AddDaystext"
        android:layout_margin="20dp">

        <EditText
            android:id="@+id/AddDaysETKeys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="monospace"
            android:textAlignment="center"
            android:background="#00000000"
            android:textSize="16sp"
            android:hint="Key"
            android:textColor="@color/black"/>

    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/AddDaysCardView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/AddDaysCardView"
        android:layout_margin="20dp"
        android:layout_marginTop="0dp">

        <EditText
            android:id="@+id/AddDaysETDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="monospace"
            android:textAlignment="center"
            android:background="#00000000"
            android:textSize="16sp"
            android:hint="No. of days to add"
            android:inputType="number"
            android:textColor="@color/black"/>

    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/AddDaysCardView1"
        android:layout_centerHorizontal="true"
        android:id="@+id/AddDaysbtn"
        android:text="Add Days"
        style="@style/Widget.Neumorph.Button"
        android:fontFamily="monospace"
        android:textColor="@color/black"/>


</RelativeLayout>