<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:textAlignment="center"
    tools:context=".ViewActivity">

    <soup.neumorphism.NeumorphImageView
        android:id="@+id/ViewActivitylogoimg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/logo" />

    <TextView
        android:id="@+id/ViewActivitytext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ViewActivitylogoimg"
        android:layout_margin="20dp"
        android:fontFamily="sans-serif-thin"
        android:text="View Key!"
        android:textAlignment="center"
        android:textSize="40sp"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ViewActivityListView"
        android:layout_below="@id/ViewActivitytext"
        android:textColor="@color/black"/>

</RelativeLayout>